<Window x:Class="Practica5.UserMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica5"
        mc:Ignorable="d"
        Title="UserMain" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Text="Ну вы пользователь получается" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35"/>
        <Button x:Name="GamesBuy" Content="Купить новые игры" Grid.Row="2" Click="GamesBuy_Click" />
    </Grid>
</Window>
